<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <PackageTags>$(PackageTags);Nats</PackageTags>
    <Description>HealthChecks.Nats is the health check package for Nats.</Description>
    <VersionPrefix>$(HealthCheckNats)</VersionPrefix>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="6.0.20" Condition="'$(TargetFramework)' == 'net6.0'"/>
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="7.0.9" Condition="'$(TargetFramework)' != 'net6.0'"/>
    <PackageReference Include="NATS.Client" Version="1.0.7" />
  </ItemGroup>

</Project>
