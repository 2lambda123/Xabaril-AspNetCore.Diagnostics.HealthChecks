<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>$(NetFrameworkVersionLts);$(NetFrameworkVersionCurrent)</TargetFrameworks>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..</DockerfileContext>
    <Version>$(HealthChecksUIK8sOperator)</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="KubernetesClient" Version="4.0.26" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.1"  Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0"  Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1"  Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.0"  Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="7.0.0" Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0"  Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="7.0.0"  Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'"/>
    <PackageReference Include="Serilog.Extensions.Logging" Version="3.1.0" />
    <PackageReference Include="Serilog.Sinks.ColoredConsole" Version="3.0.1" />
    <PackageReference Include="System.Threading.Channels" Version="6.0.0"  Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'"/>
    <PackageReference Include="System.Threading.Channels" Version="7.0.0"  Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'"/>

   
   
  </ItemGroup>

</Project>
