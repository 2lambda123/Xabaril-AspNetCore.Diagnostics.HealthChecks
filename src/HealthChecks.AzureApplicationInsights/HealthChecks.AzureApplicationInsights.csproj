<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(NetFrameworkVersion);$(NetStandardVersion)</TargetFrameworks>
    <PackageTags>HealthCheck;Azure;ApplicationInsights</PackageTags>
    <Description>HealthChecks.AzureApplicationInsights is the health check package for Azure Application Insights.</Description>
    <Version>$(HealthCheckAzureApplicationInsights)</Version>
    <PackageId>AspNetCore.HealthChecks.AzureApplicationInsights</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="5.0.1" />
  </ItemGroup>

</Project>
