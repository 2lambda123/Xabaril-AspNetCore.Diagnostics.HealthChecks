<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(NetFrameworkVersionLts);$(NetStandardVersion)</TargetFrameworks>
    <PackageTags>$(PackageTags);Uri;Url;Uris;Urls</PackageTags>
    <Description>HealthChecks.Uris is a simple health check package for Uri groups.</Description>
    <Version>$(HealthCheckUri)</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.Extensions.Http" Version="7.0.0" Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'"   />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="6.0.11" Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="7.0.0" Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'"/>
  </ItemGroup>

</Project>
