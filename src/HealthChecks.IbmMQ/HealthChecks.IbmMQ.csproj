<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(NetFrameworkVersionLts);$(NetStandardVersion)</TargetFrameworks>
    <PackageTags>$(PackageTags);IbmMQ</PackageTags>
    <Description>HealthChecks.IbmMQ is the health check package for IbmMQ.</Description>
    <Version>$(HealthCheckIbmMQ)</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IBMMQDotnetClient" Version="9.3.0.1" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="6.0.11" Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="7.0.0" Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'" />
    <Compile Include="../HealthCheckResultTask.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HealthChecks.Kafka\HealthChecks.Kafka.csproj" />
  </ItemGroup>

</Project>
