<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(NetFrameworkVersionLts);$(NetFrameworkVersionCurrent)</TargetFrameworks>
    <PackageTags>$(PackageTags);InMemory</PackageTags>
    <Description>HealthChecks.UI.InMemory.Storage package contains the required classes to use InMemory provider in the UI</Description>
    <Version>$(HealthCheckUIInMemoryStorage)</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" Version="6.0.9" Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" Version="7.0.0" Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'"/>

    
    
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HealthChecks.UI.Core\HealthChecks.UI.Core.csproj" />
  </ItemGroup>

</Project>
