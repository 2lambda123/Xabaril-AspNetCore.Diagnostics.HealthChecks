<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(NetFrameworkVersionLts);$(NetFrameworkVersionCurrent)</TargetFrameworks>
    <PackageTags>$(PackageTags);SqlServer</PackageTags>
    <Description>HealthChecks.UI.SqlServer.Storage package contains the required classes to use SqlServer provider in the UI</Description>
    <Version>$(HealthCheckUISqlServerStorage)</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="6.0.11"  Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="7.0.0"   Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0"  Condition=" '$(NetFrameworkVersionLts)' == '$(CurrentLts)'"/>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0"  Condition=" '$(NetFrameworkVersionCurrent)' == '$(CurrentLts)'"/>


   
   
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HealthChecks.UI.Core\HealthChecks.UI.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Migrations\" />
  </ItemGroup>

</Project>
